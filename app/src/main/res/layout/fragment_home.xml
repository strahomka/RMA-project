<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="269dp"
            android:src="@drawable/restoran" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/abril_fatface"
                android:text="Creative"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/abril_fatface"
                android:text="Refined"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/abril_fatface"
                android:text="Authentic"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya"
                    android:paddingBottom="10dp"
                    android:text="Welcome to Danube Delights."
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya"
                    android:paddingBottom="10dp"
                    android:text="At Danube Delights, we use only the freshest, locally-sourced ingredients to create our dishes, which range from hearty meat-based meals to fresh vegetarian options. Our chefs have a deep understanding of traditional Serbian cooking techniques and flavors, but also love to experiment with new ingredients and flavors to create exciting and innovative dishes."
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya"
                    android:paddingBottom="10dp"
                    android:text="Whether you're looking for a casual lunch or a romantic dinner, Danube Delights has something for everyone. Our cozy and inviting atmosphere is perfect for enjoying a meal with friends and family, and our friendly staff will make you feel right at home."
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya"
                    android:text="We're proud to be located in Novi Sad, a city known for its beautiful architecture, lively cultural scene, and of course, its delicious food. Come visit us and experience the best of Serbian cuisine at Danube Delights."
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@android:color/black" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>